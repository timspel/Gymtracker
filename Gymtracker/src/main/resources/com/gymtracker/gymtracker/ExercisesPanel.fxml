<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="789.0" prefWidth="1276.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymtracker.gymtracker.ExerciseController">
   <children>
      <Label layoutX="40.0" layoutY="181.0" text="Exercises:">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <ListView fx:id="exercisesList" layoutX="40.0" layoutY="238.0" onMouseClicked="#getExercise" prefHeight="442.0" prefWidth="300.0" />
      <AnchorPane id="infoPanel" layoutX="388.0" layoutY="238.0" prefHeight="500.0" prefWidth="800.0" style="-fx-border-color: black;">
         <children>
            <Label fx:id="infoPanelName" layoutX="14.0" layoutY="29.0" text="Exercise name">
               <font>
                  <Font name="AppleGothic Regular" size="25.0" />
               </font>
            </Label>
            <AnchorPane layoutX="30.0" layoutY="100.0" prefHeight="350.0" prefWidth="310.0" style="-fx-border-color: black;">
               <children>
                  <Label fx:id="infoPanelDescription" alignment="TOP_LEFT" prefHeight="350.0" prefWidth="300.0" text="Exercise info" wrapText="true">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="400.0" layoutY="100.0" style="-fx-border-color: black;">
               <children>
                  <ImageView fx:id="infoPanelImage" fitHeight="350.0" fitWidth="369.0" layoutX="-4.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
      <Button layoutX="40.0" layoutY="716.0" mnemonicParsing="false" onAction="#openAddExerciseWindow" text="Add exercise" />
      <Button layoutX="140.0" layoutY="716.0" mnemonicParsing="false" text="Edit exercise" />
      <Button layoutX="235.0" layoutY="716.0" mnemonicParsing="false" onAction="#removeExercise" text="Remove exercise" />
      <HBox alignment="CENTER" prefHeight="154.0" prefWidth="1276.0" style="-fx-background-color: #000000;">
         <children>
            <AnchorPane prefHeight="156.0" prefWidth="499.0">
               <children>
                  <ImageView fitHeight="170.0" fitWidth="499.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/backposeEdit.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="1.0" />
   </padding>
</AnchorPane>
